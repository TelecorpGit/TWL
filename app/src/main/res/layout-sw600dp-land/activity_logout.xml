<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:layout_gravity="center"
    android:background="@color/C_666666"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/rl_quit_learning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/C_4d4d4d"
        android:paddingBottom="@dimen/thirty_dp"
        android:paddingLeft="@dimen/ten_dp"
        android:paddingRight="@dimen/ten_dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="คุณต้องการออกจากระบบใช่หรือไม่ ?"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/icon_person"
            android:layout_width="@dimen/btn_cancel_width_sw600dp_land"
            android:layout_height="@dimen/btn_cancel_height_sw600dp_land"
            android:layout_below="@+id/txt_title"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_account_circle_34dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_person"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="ชื่อ : "
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_Prename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Prename"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_Forename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Forename"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_Surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Surname"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/btn_cancel_width_sw600dp_land"
            android:layout_height="@dimen/btn_cancel_height_sw600dp_land"
            android:layout_marginRight="30dp"
            android:background="@drawable/ic_cancel" />

        <Button
            android:id="@+id/btn_signout"
            android:layout_width="@dimen/btn_logout_width_sw600dp_land"
            android:layout_height="@dimen/btn_logout_height_sw600dp_land"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ic_logout" />

    </LinearLayout>
</RelativeLayout>