<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorFieldBg">
    <item>
        <shape
            android:shape="oval">
            <!-- background -->
            <solid android:color="#bc1010" />
            <!-- border -->
            <stroke android:width="4dp" android:color="#bc1010" />

            <!-- corner roundness -->
            <corners android:radius="50dp" />
        </shape>
    </item>

</selector>